{% extends "base.jinja" %}
{% block title %}{{ gettrans(lang=language, key="signup.title") }}{% endblock title %}
{% block body %}
<form method="post">
  <table>
    <tr>
      <td><label for="email">{{ gettrans(lang=language, key="signup.email") }}</label></td>
      <td><input name="email" id="email" type="email" /></td>
    </tr>
    <tr>
      <td><label for="username">{{ gettrans(lang=language, key="signup.username") }}</label></td>
      <td><input name="username" id="username" maxlength="16" /></td>
    </tr>
    <tr>
      <td><label for="password">{{ gettrans(lang=language, key="signup.password") }}</label></td>
      <td><input name="password" id="password" type="password" /></td>
    </tr>
  </table>
  <div>
    <button>{{ gettrans(lang=language, key="signup.submit") }}</button>
  </div>
</form>
{% endblock body %}
{% extends "base.jinja" %}
{% block extraheaders %}{% endblock extraheaders %}
{% block title %}run{% endblock title %}
{% block body %}
<h1>{{ user.username }}&apos;s run of {{ game.name }}</h1>
{{ run.video | video_embed }}
{% if run.time %}
<h2>
time: {{ run.time | duration }}
</h2>
{% endif %}
{% if run.score %}
<h2>
score: {{ run.score }}
</h2>
{% endif %}
{{ run.description | markdown }}
<form method="POST" action="/game/{{ run.game.slug }}/category/{{ run.category.id }}/run/{{ run.id }}/verify">
    <button>verify</button>
</form>
<form method="POST" action="/game/{{ run.game.slug }}/category/{{ run.category.id }}/run/{{ run.id }}/reject">
    <button>reject</button>
</form>

{% endblock body %}
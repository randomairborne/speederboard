{% extends "base.jinja" %}
{% block title %}{{ gettrans(lang=language, key="index.title") }}{% endblock title %}
{% block body %}
<h3>{{ gettrans(lang=language, key="index.intro") }} <a href="mailto:valk@randomairborne.dev">valk&commat;randomairborne.dev</a>.</h3>
<div class="game-list">
{% for game in games %}
<div class="root-game-card">
    <a href="{{ root_url }}/game/{{ game.slug }}" class="coverart-anchor">
        {% if game.cover_art_ext %}
        <img src="{{ cdn_url }}/customfiles/games/{{ game.id }}/coverart.png" alt="{{ gettrans(lang=language, key="index.coverart.alt", game=game.name) }}" width="180" height="240" class="coverart-img"/>
        {% else %}
        <img src="{{ cdn_url }}/public/default-coverart.svg" alt="{{ gettrans(lang=language, key="index.coverart.alt.default", game=game.name) }}" width="180" height="240" class="coverart-img" />
        {% endif %}
        <div class="coverart-tag">{{ game.name }}</div>
    </a>
</div>
{% endfor %}
</div>
{% endblock body %}
{% extends "base.jinja" %}
{% block extraheaders %}{% endblock extraheaders %}
{% block title %}game{% endblock title %}
{% block body %}
<a href="{{ root_url }}/forum/{{ game.slug }}">discuss on the forum</a>
<div class="game-categories">
{% for minicat in categories %}
<a href="{{ root_url }}/game/{{ game.slug }}/category/{{ minicat.id }}" class="">{{ minicat.name }}</a>
{% endfor %}
</div><a href="{{ root_url }}/game/{{ game.slug }}/category/{{ category.id }}/run/new">submit run</a>
{% if runs | length <= 0 %}
<p>no runs yet!</p>
{% else %}
<table>
    <tr>
        <th>user</th>
        {% if run.category.scoreboard %}
        <th>score</th>
        {% else %}
        <th>time</th>
        {% endif %}
        <th>link</th>
    </tr>
    {% for run in runs %}
    <tr>
        <td><a href="{{ root_url }}/user/{{ run.submitter.username }}">{{ run.submitter.username }}</a></td>
        {% if run.category.scoreboard %}
        <td>{{ run.score }}</td>
        {% else %}
        <td>{{ run.time | duration }}</td>
        {% endif %}
        <td><a href="{{ root_url }}/game/{{ game.slug }}/category/{{ run.category.id }}/run/{{ run.id }}">view</a></td>
    </tr>
    {% endfor %}
</table>
{% endif %}

{% endblock body %}
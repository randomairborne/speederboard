{% extends "base.jinja" %}
{% block title %}{{ gettrans(lang=language, key="login.title") }}{% endblock title %}
{% block body %}
<form method="post" action="{{ root_url }}/login">
    <table>
        <tr>
            <td><label for="email">{{ gettrans(lang=language, key="login.email") }}</label></td>
            <td><input name="email" id="email" type="email" /></td>
        </tr>
        <tr>
            <td><label for="password">{{ gettrans(lang=language, key="login.password") }}</label></td>
            <td><input name="password" id="password" type="password" /></td>
        </tr>
    </table>
    <input name="return_to" id="return_to" type="hidden" value="{{ return_to }}" />
    <button>{{ gettrans(lang=language, key="login.button") }}</button>
</form>
{% if incorrect %}
<span style="color:red;">{{ gettrans(lang=language, key="login.incorrect") }}</span>
{% endif %}
{% endblock body %}
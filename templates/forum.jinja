{% extends "base.jinja" %}
{% block title %}{{ gettrans(lang=language, key="forum.title", name=game.name) }}{% endblock title %}
 {% block body %}
<div class="forum-header">
<h1>{{ gettrans(lang=language, key="forum.heading", name=game.name) }}</h1>
<a href="{{ root_url }}/forum/{{ game.slug }}/new">{{ gettrans(lang=language, key="forum.post.new") }}</a>
</div>
<div class="forum-posts">
{% for post in posts %}
<a class="forum-post-card" href="{{ root_url }}/forum/{{ game.slug }}/post/{{ post.id }}">
    {{ post.title }}
    <hr>
    {{ post.content | truncate(length=100) | markdown }}
</a>
{% endfor %}
</div>
{% endblock body %}
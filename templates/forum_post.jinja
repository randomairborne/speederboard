{% extends "base.jinja" %}
{% block title %}{{ game.name }} | {{ post.title }}{% endblock title %}
{% block body %}
<h1>{{ post.title }}</h1>
<h3><a href="{{ root_url }}/user/{{ post.author.username }}">{{ post.author.username }}</a></h3>
<div class="forum-post-content">
<p>{{ post.content | markdown }}</p>
</div>
{% for comment in comments %}
<hr>
<h4 id="comment-{{ comment.id }}"><a href="{{ root_url }}/user/{{ comment.author.username }}">{{ comment.author.username }}</a></h4>
<div class="forum-comment-content">
{{ comment.content | markdown }}
</div>
{% endfor %}
<form method="post">
<textarea maxlength="4000" name="content" id="content"></textarea>
<br>
<button>{{ gettrans(lang=language, key="forum_post.submit") }}</button>
</form>
{% endblock body %}
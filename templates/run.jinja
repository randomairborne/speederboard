{% extends "base.jinja" %}
{% block title %}run{% endblock title %}
{% block body %}
<h1>{{ user.username }}&apos;s run of {{ game.name }}</h1>
{{ run.video | video_embed }}
{% if run.time %}
<h2>
time: {{ run.time | duration }}
</h2>
{% endif %}
{% if run.score %}
<h2>
score: {{ run.score }}
</h2>
{% endif %}
{{ run.description | markdown }}
{% if run.status == 1 %}
run approved
{% elif run.status == 0 %}
run pending verification
{% else %}
run denied.
{% endif %}
{% endblock body %}